{% extends '_templates/base.njk' %}

{% block page_title %}Tour{% endblock %}

{% block page_description %} A chart of Queen's tour{% endblock %}

{% block content %}
<div class="container">
  <div class="row justify-content-center">
    <div class="col">

      <h1>Tour Dates</h1>
      <div class="table-responsive">
        <table class="table table-striped table-bordered">
          <thead>
            <tr>
              <th scope="col">Date</th>
              <th scope="col">City</th>
              <th scope="col">Country</th>
              <th scope="col">Venue</th>
            </tr>
          </thead>
        <tbody>
          {% for tour in queen.tour %}
            <tr>
              <td>{{ tour.date }}</td>
              <td>{{ tour.city }}</td>
              <td>{{ tour.country }}</td>
              <td>{{ tour.venue }}</td>
            </tr>
          {% endfor %}
        </tbody>
       </table>
    </div>
   </div>
  </div>
 </div>
{% endblock %}